---
import { getEntry } from "astro:content";

const announcement = await getEntry("spec", "announcement");
let enable = false;
let level = "info";
let Content = null;

if (announcement) {
	enable = announcement.data.enable;
	level = announcement.data.level;
	const rendered = await announcement.render();
	Content = rendered.Content;
}

