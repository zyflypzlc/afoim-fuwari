const colorMap = {
	info: "var(--admonitions-color-note)", // Fallback to note color
	note: "var(--admonitions-color-note)",
	tip: "var(--admonitions-color-tip)",
	happy: "transparent",
	caution: "var(--admonitions-color-caution)",
	warning: "var(--admonitions-color-warning)",
	important: "var(--admonitions-color-caution)", // Fallback to caution color
};

const isHappy = level === "happy";
const currentIconPath = iconPathMap[level] || iconPathMap.info;
const currentColor = colorMap[level] || colorMap.info;
---

{enable && (
    <div class="notice-card mb-4 relative transition-all duration-300 hover:shadow-lg onload-animation">
        <div
			class="notice-content flex items-start p-4 rounded-xl bg-[var(--card-bg)] border transition-colors"
			class:list={[{ "notice-happy": isHappy }]}
			style={isHappy ? {} : { borderColor: currentColor, color: currentColor }}
		>
            <div class="icon-wrapper mr-4 flex items-center justify-center shrink-0 mt-1">
				{isHappy ? (
					<span class="notice-emoji" aria-hidden="true">ðŸŽ‰</span>
				) : (
					<svg width="24" height="24" viewBox="0 0 16 16" aria-hidden="true">
						<path d={currentIconPath} fill="currentColor"></path>
					</svg>
				)}
            </div>
            <div class="text-wrapper grow relative">
                <div class="notice-text text-sm md:text-base font-bold custom-md transition-all duration-300" id="notice-content-container">
					<Content />
				</div>
            </div>
        </div>
		{!isHappy && (
			<div class="absolute inset-0 rounded-xl pointer-events-none border-2 opacity-10" style={{ borderColor: currentColor }}></div>
		)}
    </div>
)}

<script is:inline>
    function initAnnouncement() {
        const container = document.getElementById('notice-content-container');
        if (!container) return;

        // Remove existing wrappers and buttons to prevent duplication
        const existingWrappers = container.querySelectorAll('.image-wrapper');
        existingWrappers.forEach(wrapper => {
            const img = wrapper.querySelector('img');
            if (img) {
                // Move image back to original position (before the wrapper)
                wrapper.parentNode.insertBefore(img, wrapper);
            }
            wrapper.remove();
        });

        const existingBtns = container.querySelectorAll('.btn-regular');
        existingBtns.forEach(btn => btn.remove());

        // Check if there are images
        const images = container.querySelectorAll('img');
        
        if (images.length > 0) {
            images.forEach(img => {
                // Check if already wrapped (double check)
                if (img.parentElement.classList.contains('image-wrapper')) return;

                // Create wrapper for image
                const wrapper = document.createElement('div');
                wrapper.className = 'image-wrapper hidden mt-4 mb-4';
                
                // Create toggle button
                const btn = document.createElement('button');
                btn.className = 'btn-regular w-full flex items-center justify-center gap-2 py-2 mt-2 text-[var(--primary)] font-bold bg-[var(--card-bg)] border border-[var(--primary)] rounded-lg hover:bg-[var(--primary)] hover:text-white transition-colors duration-300';
                btn.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    æŸ¥çœ‹å›¾ç‰‡
                `;

                // Wrap image
                img.parentNode.insertBefore(btn, img);
                img.parentNode.insertBefore(wrapper, img);
                wrapper.appendChild(img);

                // Toggle logic
                btn.onclick = () => {
                    wrapper.classList.toggle('hidden');
                    if (wrapper.classList.contains('hidden')) {
                        btn.innerHTML = `
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            æŸ¥çœ‹å›¾ç‰‡
                        `;
                    } else {
                         btn.innerHTML = `
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
                            </svg>
                            æ”¶èµ·å›¾ç‰‡
                        `;
                    }
                };
            });
        }
    }

    initAnnouncement();
    
    // Use data-swup-theme to mark this script as persistent if needed, 
    // or better yet, ensure initAnnouncement handles re-execution gracefully.
    // Since this is an inline script in an Astro component, it re-runs on page load.
    // But Swup might replace the body content, including this component.
    // However, if the component persists (e.g. in a persistent layout), the script might re-run or not depending on Swup config.
    // The issue described suggests DOM elements are being duplicated.
    // The fix above (removing existing wrappers) handles the re-execution safely.
    
    document.addEventListener('astro:after-swap', initAnnouncement);
</script>

<style>
.notice-happy {
	--notice-gradient: linear-gradient(
		90deg,
		oklch(0.78 0.18 calc(var(--hue) + 0)),
		oklch(0.78 0.18 calc(var(--hue) + 60)),
		oklch(0.78 0.18 calc(var(--hue) + 120)),
		oklch(0.78 0.18 calc(var(--hue) + 180))
	);
	border: 2px solid transparent;
	background: linear-gradient(var(--card-bg), var(--card-bg)) padding-box, var(--notice-gradient) border-box;
}

.notice-happy .notice-text {
	background: var(--notice-gradient);
	-webkit-background-clip: text;
	background-clip: text;
	color: transparent;
}

.notice-happy .notice-emoji {
	font-size: 1.5rem;
	line-height: 1;
}
</style>
